# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file: ${HOME}/
root = true

# default setting
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

# file type specific setting
[*.js]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
